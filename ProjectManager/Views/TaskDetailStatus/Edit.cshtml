@model ProjectManager.Models.TaskDetailStatus
@{
    ViewBag.Title = "Edit";
}

<h2>修改代辦事項名稱</h2>
<form method="post" action="~/TaskDetailStatus/Edit" class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">待辦事項名稱</label>
        <div class="col-md-2">
            <input type="hidden" class="form-control" name="TaskDetailStatusID" value="@Model.TaskDetailStatusID" />
            <input type="text" class="form-control" name="TaskDetailStatusName" value="@Model.TaskDetailStatusName" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
</form>